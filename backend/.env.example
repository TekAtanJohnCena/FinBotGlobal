# =====================================================
# FINBOT BACKEND - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =====================================================

# ============== DATABASE ==============
# MongoDB Connection String
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/finbot?appName=Cluster0

# ============== SERVER ==============
PORT=5000
NODE_ENV=development

# ============== AUTHENTICATION ==============
# JSON Web Token Secret (generate a strong random string)
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_me

# ============== AI/ML APIs ==============
# OpenAI API Key for FinBot AI
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============== MARKET DATA APIs ==============
# Tiingo API Key (Primary - Get from tiingo.com)
TIINGO_API_KEY=your_tiingo_api_key_here
TIINGO_MOCK_MODE=true

# Polygon.io API Key (Backup)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_TIER=free
USE_MOCK_DATA=true

# Financial Datasets API Key (Optional)
FINANCIAL_DATASETS_API_KEY=your_financial_datasets_key_here

# ============== OAUTH ==============
# Google OAuth Client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ============== FRONTEND ==============
# Frontend Base URL for CORS
FRONTEND_URL=http://localhost:3000

# Vite API Base (for development)
VITE_API_BASE=http://localhost:5000/api

# ============== RATE LIMITING ==============
# Requests per 15 minutes for general API
RATE_LIMIT_GENERAL=100
# Requests per hour for Tiingo proxy
RATE_LIMIT_TIINGO=500

# ============== SECURITY ==============
# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
